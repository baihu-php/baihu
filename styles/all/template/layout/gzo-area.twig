<!DOCTYPE html>
<html dir="{{ S_CONTENT_DIRECTION }}" lang="{{ S_USER_LANG }}">
	<head>
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="Description" content="{{ SITE_DESCRIPTION }}">

		{{ META }}
		<title>{% if UNREAD_NOTIFICATIONS_COUNT %}({{ UNREAD_NOTIFICATIONS_COUNT }}) {% endif %}{{ PAGE_TITLE }}</title>

		{% if U_CANONICAL %}
			<link rel="canonical" href="{{ U_CANONICAL }}">
		{% endif %}

		{% if S_COOKIE_NOTICE %}
			<link href="{{ T_ASSETS_PATH }}/cookieconsent/cookieconsent.min.css?assets_version={{ T_ASSETS_VERSION }}" rel="stylesheet">
		{% endif %}

		{# GZO theme #}
		{% INCLUDECSS '@baihu_baihu/css/theme.css' %}

		{# GZO area #}
		{% INCLUDECSS '@baihu_baihu/css/area.css' %}

		{% EVENT baihu_header_head_append %}

		{$STYLESHEETS}

		{% EVENT baihu_header_stylesheets_after %}

	</head>

	<body>

		<div class="gzo-page" id="page-top" data-container="page">
			<header class="gzo-header-container">
				<div id="gzo-overlay"></div>

				{# GZO navbar section #}
				{% block gzo_top_bar %}
					{{- include('@baihu_baihu/includes/search.twig') -}}
					{{- include('@baihu_baihu/includes/topbar.twig') -}}
				{% endblock %}
			</header>

			<aside class="gzo-area-sidebar">
				<nav class="gzo-navigation-container">
					<ul class="gzo-navigation gzo-area-navigation">
						{% set divider = menu|length > 1 %}
						{% for category in menu %}
							{{ include('@baihu_baihu/admin/includes/menu-item.twig', {'divider': divider}) }}
						{% endfor %}
					</ul>
				</nav>
			</aside>

			<main class="gzo-area-container">

				<section class="gzo-content-main">
					<div class="gzo-area-heading">
						<div class="gzo-area-title">
							{% block gzo_main_heading %}{% endblock %}
						</div>
						<div class="gzo-area-crumbs">
							{% block gzo_crumb %}
								{{- include('@baihu_baihu/includes/crumbs.twig') -}}
							{% endblock %}
						</div>
					</div>

					<div class="gzo-section-main">
						{% block gzo_main_content %}{% endblock %}
					</div>
				</section>

			</main>

			<footer class="gzo-footer-container" id="page-bottom">
				{{ include('@baihu_baihu/includes/footer.twig') }}
			</footer>

		</div>

		<script src="{{ T_JQUERY_LINK }}"></script>
		<script src="{{ T_ASSETS_PATH }}/javascript/core.js?assets_version={{ T_ASSETS_VERSION }}"></script>
		{% INCLUDEJS 'ajax.js' %}

		{% INCLUDEJS '@baihu_baihu/js/gzo.js' %}
		{% INCLUDEJS '@baihu_baihu/js/core.js' %}

		{% INCLUDEJS '@baihu_baihu/js/dashboard.js' %}

		{% EVENT baihu_footer_after %}

		{$SCRIPTS}

		{% EVENT baihu_footer_body_after %}

	</body>

</html>

{% embed '@baihu_baihu/includes/block-item.twig' %}
	{% block block_title %}{{ lang('INFORMATION') }}{% endblock %}

	{% block block_content %}
		<dl class="gzo-block-stats">

			<dt>{{ lang('GZO_VERSION') ~ lang('COLON') }}</dt>
			<dd><span class="green">{{ gzo_version }}</span></dd>

			<dt>{{ lang('PHPBB_VERSION') ~ lang('COLON') }}</dt>
			<dd><span class="green">{{ phpbb_version }}</span></dd>

			<dt>{{ lang('GZO_STYLE') ~ lang('COLON') }}</dt>
			<dd>{{ gzo_style }}</dd>

			<dt>{{ lang('PHPBB_STYLE') ~ lang('COLON') }}</dt>
			<dd>{{ T_TEMPLATE_NAME }}</dd>

		</dl>

		{% EVENT gzo_info_after %}
	{% endblock %}

{% endembed %}

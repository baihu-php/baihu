{% embed '@baihu_baihu/includes/block-item.twig' %}
	{% block block_title %}{{ lang('STATISTICS') }}{% endblock %}

	{% block block_content %}
		<dl class="block-stats">

			<dt>{{ lang('POSTS') }}</dt>
			<dd><strong>{{ TOTAL_POSTS }}</strong></dd>

			<dt>{{ lang('BAIHU_STATS_PER_DAY', lang('POSTS')) }}</dt>
			<dd><strong>{{ ppd }}</strong></dd>

			<dt>{{ lang('BAIHU_TOPICS') }}</dt>
			<dd><strong>{{ TOTAL_TOPICS }}</strong></dd>

			<dt>{{ lang('BAIHU_STATS_PER_DAY', lang('TOPICS')) }}</dt>
			<dd><strong>{{ tpd }}</strong></dd>

			<dt>{{ lang('BAIHU_MEMBERS') }}</dt>
			<dd><strong>{{ TOTAL_USERS }}</strong></dd>

			<dt>{{ lang('BAIHU_STATS_PER_DAY', lang('BAIHU_MEMBERS')) }}</dt>
			<dd><strong>{{ upd }}</strong></dd>

			<dt>{{ lang('BAIHU_NEWEST') }}</dt>
			<dd><strong>{{ baihu_username('profile', N_USER_ID, N_USER_NAME, N_USER_COLOR, 'newest-user') }}</strong></dd>

		</dl>

		{% EVENT baihu_stats_after %}
	{% endblock %}

{% endembed %}

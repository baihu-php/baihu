{% extends '@baihu_baihu/layout/area-base.twig' %}

{% block gzo_main_heading %}

	<h2>{{ lang('AREA_MAIN_PAGE') }}</h2>
	<p class="area-desc">{{ lang('AREA_MAIN_PAGE_DESC') }}</p>

{% endblock %}

{% block gzo_main_content %}

	<div class="cards">
		<div class="card card-test">
			<span class="card-icon">{{ Icon('gzo', 'mdi--alien-outline', lang('AREA_BAIHU_INFO'), true) }}</span>
			<span class="card-list">
				{{ lang('AREA_BAIHU_INFO') }}
				<small class="card-item">{{ VERSION }}</small>
			</span>
		</div>

		<div class="card">
			<span class="card-icon">{{ Icon('gzo', 'mdi--style-outline', lang('AREA_STYLE_INFO'), true) }}</span>
			<span class="card-list">
				{{ lang('AREA_STYLE_INFO') }}
				<small class="card-item">{{ STYLE }}</small>
			</span>
		</div>

		<div class="card">
			<span class="card-icon">{{ Icon('gzo', 'mdi--language-php', lang('AREA_PHP_INFO'), true) }}</span>
			<span class="card-list">
				{{ lang('AREA_PHP_INFO') }}
				<small class="card-item">{{ PHP_VERSION }}</small>
			</span>
		</div>

		<div class="card">
			<span class="card-icon">{{ Icon('gzo', 'mdi--comments-text-outline', lang('AREA_BOARD_INFO'), true) }}</span>
			<span class="card-list">
				{{ lang('AREA_BOARD_INFO') }}
				<small class="card-item">{{ BOARD_VERSION }}</small>
			</span>
		</div>

	</div>

{% endblock %}

<div class="notification-container action-toggle baihu-notification">
	<div class="bar notification-header">

		<div class="bar-left notification-header-left">
			<h2 class="bar-title">{{ lang('NOTIFICATIONS') }}</h2>
		</div>

		<div class="bar-right notification-header-right">
			<a class="bar-item action notification-action" href="{{ U_NOTIFICATION_SETTINGS }}" data-tooltip="true" title="{{ lang('NOTIFICATIONS') }}">
				{{ Icon('gzo', 'mdi--settings-outline', lang('NOTIFICATIONS'), true) }}
			</a>
		</div>

	</div>

	<ul class="notification-list">
		{% if notifications %}

			{% for item in notifications %}
				<li class="notification-item">
					<a class="notification-media" href="{{ item.url }}">
						<span class="avatar-wrap avatar avatar-sm">
							{{ avatar('user', item, '', false, true, 'avatar-sm', false) }}
						</span>
					</a>

					<div class="notification-text">
						<p class="notification-title">{{ item.FORMATTED_TITLE }}</p>
						{% if item.REFERENCE %}<p class="notification-reference">{{ item.REFERENCE }}</p>{% endif %}
						{% if item.FORUM %}<p class="notification-forum">{{ item.FORUM }}</p>{% endif %}
						{% if item.REASON %}<p class="notification-reason">{{ item.REASON }}</p>{% endif %}
						<p class="notification-time">
							{{ Icon('gzo', 'mdi--clock-outline', item.TIME, true) }}
							<time class="time-text" datetime="{{ item.TIME }}" title="{{ item.TIME }}" data-short="{{ item.TIME }}">{{ item.TIME }}</time>
						</p>
					</div>
				</li>
			{% endfor %}

		{% else %}
			<li class="notification-no-item">{{ lang('NO_NOTIFICATIONS') }}</li>
		{% endif %}
	</ul>

	<div class="bar notification-footer">

		<a class="bar-item action notification-action" href="{{ U_VIEW_ALL_NOTIFICATIONS }}">
			<span class="action-text">{{ lang('SEE_ALL') }}</span>
		</a>

	</div>
</div>

<div class="bar gzo-navbar">

	<div class="bar-left gzo-navbar-left">

		{# Here should go brand #}
		<h1>
			<a class="bar-item action gzo-brand-action" href="{{ path('baihu_main_index') }}" data-tooltip="true" title="{{ SITENAME }}">
				{{ Icon('gzo', 'GZO', SITENAME, true, 'gzo-brand') }}
			</a>
		</h1>

		{# Left side drawer #}
		<button class="bar-item action" data-tooltip="true" data-toggle="drawer-left" title="{{ lang('QUICK_LINKS') }}">
			{{ Icon('gzo', 'mdi--more-vert', lang('QUICK_LINKS'), true) }}
		</button>

		{{ include('@baihu_baihu/includes/drawer-left.twig',  { 'side': 'left' }) }}

	</div>

	<div class="bar-right gzo-navbar-right">

		{% if S_REGISTERED_USER %}
			<button class="bar-item action" data-toggle="search" data-tooltip="true" title="{{ lang('SEARCH') }}">
				{{ Icon('gzo', 'mdi--search', lang('SEARCH'), true) }}
			</button>

			<span class="bar-item gzo-navbar-item">

				<button class="action" data-toggle="create" data-tooltip="true"	 title="{{ lang('BAIHU_CREATE') }}">
					{{ Icon('gzo', 'add', lang('BAIHU_CREATE'), true) }}
				</button>

				{{ include('@baihu_baihu/includes/create.twig') }}
			</span>

			{% if S_NOTIFICATIONS_DISPLAY %}
				<span class="bar-item gzo-navbar-item">

					<button class="action" data-toggle="notification" data-tooltip="true" title="{{ lang('NOTIFICATIONS') }}">
						{{ Icon('gzo', 'mdi--bell-outline', lang('NOTIFICATIONS'), true) }}

						{% if NOTIFICATIONS_COUNT %}
							<span class="tag">{{ NOTIFICATIONS_COUNT }}</span>
						{% endif %}
						<span class="action-text u-sr-only">{{ lang('NOTIFICATIONS') }}</span>
					</button>

					{{ include('@baihu_baihu/includes/notifications.twig') }}
				</span>
			{% endif %}

			{% if S_DISPLAY_PM %}
				<a class="bar-item action" href="{{ U_PRIVATEMSGS }}" data-tooltip="true" title="{{ lang('PRIVATE_MESSAGES') }}">
					{{ Icon('gzo', 'mdi--inbox', lang('PRIVATE_MESSAGES'), true) }}

					{% if PRIVATE_MESSAGE_COUNT %}
						<span class="tag">{{ PRIVATE_MESSAGE_COUNT }}</span>
					{% endif %}
					<span class="action-text u-sr-only">{{ lang('PRIVATE_MESSAGES') }}</span>
				</a>
			{% endif %}

			{# Right side drawer #}
			<button class="bar-item action" data-toggle="drawer-right">

				<span class="avatar-wrap avatar avatar-sm">
					{{ avatar('user', CURRENT_USER_AVATAR, '', false, true, 'avatar-sm', true) }}
				</span>

			</button>

			{{ include('@baihu_baihu/includes/drawer-right.twig', { 'side': 'right' }) }}

		{% elseif not S_IS_BOT %}
			<a class="bar-item action" href="{{ U_LOGIN_LOGOUT }}" data-tooltip="true" title="{{ lang('LOGIN_LOGOUT') }}">
				{{ Icon('gzo', 'fa-power-off', lang('LOGIN_LOGOUT'), true) }}
			</a>
		{% endif %}

	</div>
</div>
